@page
@model LoginModel

@{
    ViewData["Title"] = "Logowanie";
}

<div class="card">
    <div class="card-body">
        <h4 class="card-title text-center mb-4 mt-1">Logowanie</h4>
        <hr />
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <label asp-for="Input.UserName" class="input-group-text"><i class="fa fa-user"></i></label>
                    </div>
                    <input asp-for="Input.UserName" class="form-control" placeholder="Nazwa użytkownika" />
                </div>
                <span asp-validation-for="Input.UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <label asp-for="Input.Password" class="input-group-text"><i class="fa fa-lock"></i></label>
                    </div>
                    <input asp-for="Input.Password" class="form-control" placeholder="Twoje hasło" />                    
                </div>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-block">Zaloguj się</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
