@model Room

@{
    ViewData["Title"] = "Usuń salę";
}

<h1>Usuwanie sali: </h1>

<h3>Czy chcesz usunąć salę o podanych poniżej danych?</h3>

<hr />

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Number):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Number)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" class="btn btn-danger" onclick="onDelete()" value="Usuń" />
        <a asp-controller="RoomLessons" asp-action="Index" asp-route-id="@Model.Id" class="ml-2">Cofnij</a>
    </form>
</div>
